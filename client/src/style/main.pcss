@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
  html {
    @apply font-mono font-normal;
    font-size: 18px;
    line-height: 24px;
  }
  body {
    background-color: #f2e9e4;
    font-family: 'Dosis', Sans-Serif;
    color: #0E0E19;
  }

  h1 {
    @apply text-center
  }
}

.something {
  @apply bg-red-500;
  & .something-else {
    @apply bg-blue-400;
  }
}
